---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dashboard">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold">Dashboard</h1>
      <div class="flex items-center space-x-2">
        <select
          class="h-10 rounded-md border border-input bg-background px-3 py-2"
        >
          <option value="2024-03">March 2024</option>
          <option value="2024-02">February 2024</option>
          <option value="2024-01">January 2024</option>
        </select>
      </div>
    </div>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
      <div class="rounded-lg border bg-card p-6 text-card-foreground">
        <h3 class="text-sm font-medium">Total Expenses</h3>
        <p class="mt-2 text-3xl font-bold">$12,345.67</p>
      </div>
      <div class="rounded-lg border bg-card p-6 text-card-foreground">
        <h3 class="text-sm font-medium">Average Daily</h3>
        <p class="mt-2 text-3xl font-bold">$398.25</p>
      </div>
      <div class="rounded-lg border bg-card p-6 text-card-foreground">
        <h3 class="text-sm font-medium">Most Common Category</h3>
        <p class="mt-2 text-3xl font-bold">Fuel</p>
      </div>
      <div class="rounded-lg border bg-card p-6 text-card-foreground">
        <h3 class="text-sm font-medium">Active Vehicles</h3>
        <p class="mt-2 text-3xl font-bold">5</p>
      </div>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      <div class="rounded-lg border bg-card p-6">
        <h3 class="text-lg font-medium">Expenses by Category</h3>
        <div class="mt-4 space-y-4">
          <div class="flex items-center justify-between">
            <span>Fuel</span>
            <span class="font-medium">$5,234.56</span>
          </div>
          <div class="flex items-center justify-between">
            <span>Maintenance</span>
            <span class="font-medium">$3,456.78</span>
          </div>
          <div class="flex items-center justify-between">
            <span>Insurance</span>
            <span class="font-medium">$2,345.67</span>
          </div>
          <div class="flex items-center justify-between">
            <span>Other</span>
            <span class="font-medium">$1,308.66</span>
          </div>
        </div>
      </div>

      <div class="rounded-lg border bg-card p-6">
        <h3 class="text-lg font-medium">Recent Expenses</h3>
        <div class="mt-4 space-y-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium">Fuel - Vehicle #123</p>
              <p class="text-sm text-muted-foreground">March 15, 2024</p>
            </div>
            <span class="font-medium">$234.56</span>
          </div>
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium">Maintenance - Vehicle #456</p>
              <p class="text-sm text-muted-foreground">March 14, 2024</p>
            </div>
            <span class="font-medium">$567.89</span>
          </div>
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium">Insurance - Vehicle #789</p>
              <p class="text-sm text-muted-foreground">March 13, 2024</p>
            </div>
            <span class="font-medium">$345.67</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
