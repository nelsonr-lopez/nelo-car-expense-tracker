---
interface Props {
  size?: "sm" | "md" | "lg";
}

const { size = "md" } = Astro.props;

const sizeClasses = {
  sm: "h-4 w-4",
  md: "h-8 w-8",
  lg: "h-12 w-12",
};
---

<div class="flex justify-center items-center">
  <div
    class={`${sizeClasses[size]} animate-spin rounded-full border-4 border-primary border-t-transparent`}
  >
  </div>
</div>
